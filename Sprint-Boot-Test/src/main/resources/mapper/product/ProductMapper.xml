<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.freelance.agent.restapi.repository.ProductMapper">

  <select id="findAll" resultType="Product">
    SELECT * FROM product
  </select>

  <select id="findById" parameterType="long" resultType="com.freelance.agent.restapi.model.Product">
    SELECT * FROM product WHERE id = #{id}
  </select>

  <insert id="insert" parameterType="com.freelance.agent.restapi.model.Product">
    INSERT INTO product (name, price, stock, description)
    VALUES (#{name}, #{price}, #{stock}, #{description})
  </insert>

  <update id="update" parameterType="com.freelance.agent.restapi.model.Product">
    UPDATE product
    SET name = #{name},
        price = #{price},
        stock = #{stock},
        description = #{description}
    WHERE id = #{id}
  </update>

  <delete id="delete" parameterType="long">
    DELETE FROM product WHERE id = #{id}
  </delete>

</mapper>